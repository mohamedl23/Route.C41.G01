@model EmployeeViewModel



@{
    var departments = new SelectList( ViewBag.Departments, nameof(Department.Id), nameof(Department.Name));
} 

<div class="mb-4">
    <label asp-for="Name" class="col-form-label"></label>
    <input asp-for="Name" class="form-control" placeholder="Mohamed" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="mb-4">
    <label asp-for="Address" class="col-form-label"></label>
    <input asp-for="Address" class="form-control" placeholder="123-Street-City-Country" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="mb-4">
    <label asp-for="Age" class="col-form-label"></label>
    <input asp-for="Age" class="form-control" placeholder="22" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="mb-4">
    <label asp-for="Salary" class="col-form-label"></label>
    <input asp-for="Salary" class="form-control" placeholder="3000" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>
<div class="mb-4">
    <input asp-for="IsActive" class="form-check-input" />
    <label asp-for="IsActive" class="col-form-label"></label>
</div>
<div class="mb-4">
    <label asp-for="HiringDate" class="col-form-label"></label>
    <input asp-for="HiringDate" class="form-control" placeholder="22/3/2024 07:30 PM" />
    <span asp-validation-for="HiringDate" class="text-danger"></span>
</div>
<div class="mb-4">
    <label asp-for="gender" class="col-form-label"></label>
    <input asp-for="gender" class="form-control" placeholder="Male , Female" />
    <span asp-validation-for="gender" class="text-danger"></span>
</div>
<div class="mb-4">
    <label asp-for="Email" class="col-form-label"></label>
    <input asp-for="Email" class="form-control" placeholder="Mohamed123@gmail.com" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="mb-4">
    <label asp-for="Department" class="col-form-label"></label>
    <select class="form-control" asp-for="DepartmentId" asp-items="@departments" >
        <option value="@null" > -- Select Department -- </option>
    </select>
</div>
<div class="mb-3"  > 
    <label asp-for="Image" class="col-form-label" ></label>
    <input asp-for="Image" class="form-control-file" />
</div>
